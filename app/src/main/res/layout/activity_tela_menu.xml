<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar azul -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/DarkBlue"
            android:title="ConstruAgro"
            android:titleTextColor="@android:color/white" />

        <!-- Campo de busca -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/Text_Pesquisar_Itens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Pesquisar itens..." />

        <!-- Filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/filtro_categoria"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Categoria"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="text" />

            <EditText
                android:id="@+id/filtro_valor_max"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Valor máx"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Datas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/data_inicio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Data início"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:focusable="false"
                android:clickable="true" />

            <EditText
                android:id="@+id/data_fim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Data fim"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:focusable="false"
                android:clickable="true" />
        </LinearLayout>

        <!-- Lista de produtos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_itens"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Botão flutuante -->
    <ImageButton
        android:id="@+id/Button_Menu_Rapido"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/DarkBlue"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_cruz_branca_botao_menu"
        android:contentDescription="Menu rápido" />

    <!-- Menu flutuante -->
    <LinearLayout
        android:id="@+id/layout_menu_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="10dp"
        android:background="@drawable/menu_background"
        android:padding="10dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/opcao_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Produto"
            android:padding="8dp" />

        <TextView
            android:id="@+id/opcao_saida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saída de Itens"
            android:padding="8dp" />

        <TextView
            android:id="@+id/opcao_relatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatórios"
            android:padding="8dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
