<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Barra azul -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/DarkBlue"
        android:title="Criar Relatório"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Botão de voltar -->
    <ImageButton
        android:id="@+id/botao_voltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_button"
        android:scaleType="fitCenter"
        android:contentDescription="Voltar"
        android:elevation="8dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="-48dp" />

    <!-- Conteúdo com ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRIAR RELATÓRIOS"
                android:textColor="@color/DarkBlue"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Nome (Spinner) -->
            <Spinner
                android:id="@+id/spinnerNomeFiltro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- Tipo de Relatório -->
            <Spinner
                android:id="@+id/spinnerTipoRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- Período -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/editTextDataInicio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Data Início"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/editTextDataFim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Data Fim"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Cadastrado por -->
            <EditText
                android:id="@+id/editTextCadastradoPorFiltro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filtrar por quem cadastrou"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="24dp" />

            <!-- Botão gerar relatório -->
            <Button
                android:id="@+id/buttonGerarRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerar Relatório"
                android:textSize="18dp"
                android:backgroundTint="@color/DarkBlue"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView resultado -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewResultadoRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botão fixo no final -->
    <Button
        android:id="@+id/buttonExportarPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar em PDF"
        android:textSize="18dp"
        android:backgroundTint="@color/DarkBlue"
        android:textColor="@android:color/white"
        android:layout_margin="16dp" />
</LinearLayout>
