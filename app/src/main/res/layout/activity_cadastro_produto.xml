<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Cadastro de Produto"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/DarkBlue"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Substitua o EditText por AutoCompleteTextView -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:hint="Nome do Produto">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:completionThreshold="1"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Adicione este TextView para mostrar a quantidade existente -->
        <TextView
            android:id="@+id/textViewQuantidadeExistente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/DarkBlue"
            android:visibility="gone"/>

        <!-- Mantenha os outros campos -->
        <EditText
            android:id="@+id/editTextValor"
            android:hint="Valor"
            android:textColorHint="#888888"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <EditText
            android:id="@+id/editTextQuantidade"
            android:hint="Quantidade"
            android:textColorHint="#888888"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <EditText
            android:id="@+id/editTextCategoria"
            android:hint="Categoria"
            android:textColorHint="#888888"
            android:inputType="textCapWords"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Mantenha os botÃµes -->
        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button"
            android:textColor="@color/white"
            android:id="@+id/buttonSalvar"
            android:text="Salvar Produto"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button"
            android:textColor="@color/white"
            android:id="@+id/buttonCancelar"
            android:text="Cancelar"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>